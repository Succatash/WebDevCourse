<%- include("../partials/header") %>

<div class="container">
    <div class="row">
      
      <h4 style="text-align: center;">Edit Comment</h4>
      <div style="width: 40%; margin: 30px auto;">
        <form action="/campgrounds/<%=campground_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">
          
          
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="leave comment"
            value='<%=comment.text%>'>
          </input>
          </div>
          
          <button  type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
          
        </form>
        <a href="/campgrounds" value="Go Back!">Back to Campgrounds</a>
      </div>
    </div>
    </div>
    
