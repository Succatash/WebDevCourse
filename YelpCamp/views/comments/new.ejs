<%- include("../partials/header") %>

<div class="container">
    
    <h4 style="text-align: center;">Add New Comment to <em><%=campground.name%></em></h4>
    <div style="width: 40%; margin: 30px auto;">
      <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
        
      
              <div class="form-group">
              <textarea class="form-control" type="text" name="comment[text]" placeholder="leave comment"></textarea>
              </div>
        
        <button  type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
        
      </form>
      <a href="/campgrounds" value="Go Back!">Back to Campgrounds</a>
    </div>
  </div>
  
  <%- include("../partials/footer") %>
