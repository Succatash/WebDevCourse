<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelp Camp</p>
			<div class="list-group">
				<li class="list-group-item active">Input 1</li>
				<li class="list-group-item">Input 2</i>		
				<li class="list-group-item">Input 3</li>
			</div>
			<!-- map will go here -->
		</div>

		<div class="col-md-9">
			<div class="thumbnail">
				<img src="<%= campgrounds.image %>" alt="" class="img-responsive">
				<div class="caption-full">
					<h4 class="pull-right">$<%= campgrounds.price%>/per night</h4>
				  <h4>	
						<a><%= campgrounds.name %></a>
					</h4>
					<p><%= campgrounds.description%></p>
					<p> 
						<em> Submitted By <%= campgrounds.author["username"]%></em>
					</p>
					<% if(currentUser && campgrounds.author.id.equals(currentUser._id)){%>
					<a class="btn btn-warning" href="/campgrounds/<%=campgrounds._id%>/edit">EDIT</a>

					<form class="deleteForm" action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
					<button class="btn btn-danger">Delete</button>
				</form>
					<% } %>			
					</div>

			</div>
					<div class="well">
						<div class="text-right">
							<a  href="/campgrounds/<%=campgrounds._id%>/comments/new" class="btn btn-success">Add New Comment</a>
						</div>
								<% campgrounds.comments.forEach(function(comment){%>
								<div class="row">
									<div class="col-md-12">
										<b><%= comment.author.username %></b>	
									<span class="pull-right">10 days ago</span>

								<p>
									<%= comment.text%>
								</p> 

							</p>

							<div class="pull-right">
								<% if(currentUser && comment.author.id.equals(currentUser._id)){%>

							<a href="/campgrounds/<%=campgrounds._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">EDIT</a>
							
							<form  action="/campgrounds/<%=campgrounds._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" class="deleteForm">

								<input type="submit" value="Delete" class="btn btn-xs btn-danger">
							</form>
	<% } %>
            </div>
          
							</div>
						</div>
					<%})%>
				</div>
		</div>
	<div>
<div>

	

	

		
