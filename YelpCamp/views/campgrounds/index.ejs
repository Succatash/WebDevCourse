<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">

			<h1>Welcome Campers to YelpCamp</h1>
			<p>View our selection of hand picked Campgrounds</p>
			
			<p>
				<a class="btn btn-large btn-primary" href="/campgrounds/new"
				>Add a new Campground</a
				>
			</p>
		</div>
	</header>

	<div class="row text-center" style='display:flex; flex:flex-wrap;'> 
		
		
		<div class="col-lg-12">
			<h3 style="text-align: center; padding-bottom: 1em;">Our Most Popular Campgrounds</h3>
		</div>
		</div>
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgroundsKey.forEach((campgrounds)=>{%>
	
			<div class="col-md-3 col-sm-6" id='campgroundsThumbails'>
				<div class="thumbnail" >
					<img src="<%= campgrounds.image%>" />
					<div class="caption">
						<h4><%= campgrounds.name %></h4>
						<p>
							<a href="/campgrounds/<%= campgrounds._id%>" class="btn btn-primary"
								>More Info
							</a>
						</p>
					</div>
				</div>
			</div>
			
			<%}) %>
		</div>
	</div>
</div>
	
<%- include("../partials/footer") %>