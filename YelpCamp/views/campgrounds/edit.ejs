<%- include("../partials/header") %>

<div class="container">
  
    
    <h4 style="text-align: center;">Edit <%= campgrounds.name%></h4>
    <div style="width: 40%; margin: 30px auto;">
 
      <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campgrounds[name]"  value="<%=campgrounds.name%>" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text"  name="campgrounds[image]" value="<%=campgrounds.image%>" placeholder="image url" >
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campgrounds[description]"  vablue="<%=campgrounds.description%>" placeholder="description" >
        </div>

        <button  type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
        
      </form>
      <a href="/campgrounds" value="Go Back!">Back to Campgrounds</a>
    </div>
    
    
      
    
  </div>
  
  <%- include("../partials/footer") %>
