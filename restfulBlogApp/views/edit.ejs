<%- include("partials/header")%>

<div class="ui main text container segment">


  <div class="ui huge header">Edit <%= blog.title %> <div>
<!-- using an npm package to override the put -->
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST" >

    <div class="field">
      <label for="blog[title]"title>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title%> ">
    </div>

    <div class="field">
      <label for="blog[altTag]">Alt Tag</label>
      <input type="text" name="blog[altTag]" value="<%= blog.altTag%>">
    </div>

    <div class="field">
      <label for="blog[image]">Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image%>">
    </div>

    <div class="field">
      <label id="body" for="blog[body]">Body</label>

      <!--since textareas have no value need to do something different-->
      <textarea type="text" name="blog[body]" >
        <%= blog.body%>
      </textarea>

    </div>

    <input class="ui inverted green button" type='submit'>

  </form>

</div>



<%- include("partials/footer")%>