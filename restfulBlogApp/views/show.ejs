<%- include("partials/header")%>
<div class="ui main text container segment">
  <div class="ui huge header"><%=blog.title%></div>
  <div class="ui top attached"></div>
    <div class="item">
      <img src="<%= blog.image%>" alt="<%= blog.altTag %>" class="ui centered rounded image">
    </div>
    <div class="item">
      <span><%= blog.created.toDateString()%></span>
      <div class="description"><!--the - sign allows are body to read html-->
        <p><%- blog.body %></p>
      </div>
      <a id="delete" href="/blogs/<%blog._id%>" class="ui purple inverted button">EDIT</a>
        <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
          <button class="ui red basic button">Delete</button>
        </form>

        
        
  </div>
</div>


<%- include("partials/footer")%>